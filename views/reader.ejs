<%- include("partials/header.ejs") -%>

<div class="mainReader">
  <h1 id="word"></h1>
</div>

<div class="slidecontainer">
  <p id="wpmLabel">Words/minute:</p>
  <p class="lead">
    <a
      href="/form"
      class="btn btn-lg btn-secondary"
      style="display: none;"
      id="nextButton"
      onmouseover="addData()"
      >
      NEXT
    </a>
  </p>
</div>

<a href="/" id="close"><i class="fas fa-times"></i></a>

<script src="js/rsvp.js"></script>
<script>
  //passing words to rsvpModule
  rsvpModule.init(<%- JSON.stringify(arrayOfWords) %>, <%= speed %>);

  function addData() {
    let {
      countFaster: cf,
      countSlower: cs,
      countPauses: cp,
      time: t,
    } = rsvpModule.getData();
    let el = document.getElementById("nextButton");
    el.setAttribute("href", `/form?cf=${cf}&cs=${cs}&cp=${cp}&t=${t}`);
  }
</script>

